{
  "name": "centy",
  "version": "0.0.28",
  "description": "CLI for managing project issues and docs via code in the .centy folder",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "centy": "./bin/run.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "proto",
    "oclif.manifest.json"
  ],
  "scripts": {
    "build": "pnpm run build:tsc && pnpm run manifest",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "manifest": "oclif manifest",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "spell": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "knip": "knip",
    "prepare": "husky",
    "release": "release-it",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "pnpm run build"
  },
  "keywords": [
    "cli",
    "project-management",
    "issues",
    "docs",
    "centy",
    "oclif"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "publishConfig": {
    "access": "public"
  },
  "oclif": {
    "bin": "centy",
    "dirname": "centy",
    "commands": {
      "strategy": "pattern",
      "target": "./dist/commands"
    },
    "hooks": {
      "prerun": "./dist/hooks/prerun.js",
      "postrun": "./dist/hooks/postrun.js"
    },
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/dict-he": "^4.0.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/update-notifier": "^6.0.8",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "bun-types": "^1.3.3",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-config-agent": "^1.8.9",
    "eslint-config-publishable-package-json": "^1.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "oclif": "^4.22.52",
    "prettier": "^3.7.3",
    "release-it": "^19.0.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@grpc/proto-loader": "^0.7.13",
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-help": "^6.2.36",
    "@octokit/rest": "^22.0.1",
    "@opentui/core": "^0.1.56",
    "@opentui/react": "^0.1.56",
    "clipboardy": "^5.0.1",
    "react": "^19.2.1",
    "tar": "^7.5.2",
    "update-notifier": "^7.3.1",
    "uuid": "^13.0.0"
  }
}
